<% layout('layouts/boilerplate') %>
<div class="container-fluid d-flex justify-content-center">
    <form action="" method="POST" class="main-dropdown">
        <!-- Source Media -->
        <div class="form-group">
            <label for="upSource">Source media <span class="check"><i class="fa-solid fa-check"></i></span></label>
            <input type="text" id="upSource" name="upSource" class="form-control" placeholder="Path to media on SAN" required>
        </div>
        <!-- URL -->
        <div class="form-group">
            <label for="upURL">URL <span class="check"><i class="fa-solid fa-check"></i></span></label>
            <input type="text" id="upURL" name="upURL" class="form-control" placeholder="URL for upload platform" required>
        </div>
        <!-- Login Details -->
        <h4>Login Details</h4>
        <div class="form-row row-eq-spacing-sm">
            <div class="col-sm">
                <label for="upUsername">Username <span class="check"><i class="fa-solid fa-check"></i></span></label>
                <input type="text" id="upUsername" name="upUsername" class="form-control" placeholder="Username" required>
            </div>
            <div class="col-sm">
                <label for="upPassword">Password <span class="check"><i class="fa-solid fa-check"></i></span></label>
                <input type="text" id="upPassword" name="upPassword" class="form-control" placeholder="Password" required>
            </div>
        </div>
        <!-- Recipients -->
        <div class="form-group">
            <label for="upRecipients">Recipients <span class="check"><i class="fa-solid fa-check"></i></span></label>
            <textarea name="upRecipients" id="upRecipients" cols="30" rows="10" class="form-control" placeholder="Email addresses of recipients"></textarea>
        </div>
        <!-- Package Name -->
        <div class="form-group">
            <label for="upPackage">Package name <span class="check"><i class="fa-solid fa-check"></i></span></label>
            <input type="text" id="upPackage" name="upPackage" class="form-control" placeholder="Package name" required>
        </div>
        <!-- Package Password -->
        <div class="form-group">
            <label for="upPassword">Package Encryption <span class="check"><i class="fa-solid fa-check"></i></span></label>
            <select class="form-control" id="upPassword" name="upPassword" required>
                <option value="" selected="selected" disabled="disabled">Package Encryption</option>
                <option value="na">Not Required</option>
                <option value="custom">Custom Password</option>
                <option value="generate">Generate one for me</option>
            </select>
        </div>

        <div class="form-group d-flex justify-content-center">
            <button class="btn btn-primary" type="submit" id="submitBtn">Submit</button>
        </div>
    </form>
</div>